<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Maintenance Request</title>
  <!-- <link rel="stylesheet" href="stylesheets/rent_estimate.css"> -->
  <style>
    .box {
      display: flex;
      flex-direction: column;
      gap: 50px;
      margin: 50px;
    }

    form label {
      font-size: 22px;
    }

    .form label,
    .diff_features div {
      color: black;
      font-size: 24px;
    }

    select,
    option {
      color: black;
      cursor: pointer;
    }

    input,
    select {
      width: 150px;
      border-radius: 3px;
      border: 1px solid black;
      color: black;
    }

    input {
      padding-left: 5px;
      box-sizing: border-box;
    }

    button {
      background-color: #2e8a79;
      height: 40px;
      width: 150px;
      margin: 10px;
      margin-right: 0;
      border-radius: 5px;
      border: none;
      align-self: flex-end;
      font-size: 18px;
      padding: 0 15px;
      cursor: pointer;
    }

    .select,
    .inputs {
      width: 100%;
      display: flex;
      justify-content: space-between;
    }

    .RE {
      font-size: 30px;
      color: black;
    }

    @media only screen and (max-width:780px) {
      form label {
        font-size: 14px;
      }

      .box {
        margin: 50px 20px;
      }

      input,
      select,
      button {
        width: 130px;
      }
    }

    @media only screen and (max-width:556px) {
      form label {
        font-size: 14px;
      }

      .box {
        margin: 50px 35px;
      }
    }
  </style>
</head>

<body>
  <h3>Add Maintenance Request</h3>
  <div class="box">
    <div class="form">


      <form action="/maintenanceRequest" method="POST">
        <div class="inputs">
          <label for="tenantName">Tenant Name:</label>
          <input type="text" id="tenantName" name="tenantName" required>
        </div>

        <div class="inputs">
          <label for="propertyType">Property Type:</label>
          <input type="text" id="subject" name="propertyType" required>
        </div>

        <div class="inputs">
          <label for="subCategory">Sub Category:</label>
          <input type="text" id="subCategory" name="subCategory" required>
        </div>

        <div class="inputs">
          <label for="address">Address:</label>
          <input type="text" id="address" name="address" required>
        </div>

        <div class="inputs">
          <label for="subject">Subject:</label>
          <input type="text" id="subject" name="subject" required>
        </div>

        <div class="inputs">
          <label for="description">Description:</label>
          <!-- <input type="text" id="description" name="description" required> -->
          <textarea name="description" id="description" rows="3" required></textarea>
        </div>

        <div class="inputs">
          <label for="Request Date">Request Date</label>
          <input type="text" id="Request Date" name="Request Date" required>
        </div>

        <div class="submit_button">
          <button type="submit">Add Request</button>
        </div>
      </form>
    </div>
  </div>

</body>

</html>