<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RentEstate | Owner Portal | Rental Income</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
    rel="stylesheet">


  <link rel="stylesheet" href="stylesheets/renatalincome.css">

</head>

<body>

  <div class="navbar">
    <img src="/images/Logo.svg" alt="Logo">
    <div class="heading">RentEstate</div>
    <div class="tabs">
      <a href="/" class="button">Home</a>
      <a href="/vacancies" class="button">Vacancies</a>
    </div>
    <a href="javascript:void(0);" class="icon" onclick="toggleMenu()">
      ☰
    </a>
  </div>

  <div id="myLinks" class="overlay">
    <a href="javascript:void(0);" class="closebtn" onclick="toggleMenu()">&times;</a>
    <a href="/" class="button">Home</a>
    <a href="/vacancies" class="button">Vacancies</a>
  </div>

  <section class="container">

    <div class="side fit">

      <div class="sidebar">
        <ul class="main_feature">
          <a href="/owner_portal" class="feature">
            <li id="myProfile">My Profile</li>
          </a>
          <a href="/myProperties" class="feature">
            <li>My Properties</li>
          </a>
          <a href="/addproperties" class="feature">
            <li>Add Properties</li>
          </a>
        </ul>
        <h3 class="text">~TENANTS</h3>
        <ul class="main_feature">
          <a href="/my_tenants" class="feature">
            <li>My Tenants</li>
          </a>
          <a href="/message" target="_blank" class="feature">
            <li>Messages</li>
          </a>
          <a href="/request" target="_blank" class="feature"> 
            <li>Requests</li>
          </a>
        </ul>
        <h3 class="text">~TOOLS</h3>
        <ul class="main_feature">
          <a href="/rent_estimate" class="feature">
            <li>Rent Estimate</li>
          </a>
          <a href="#" class="feature"> 
            <li>Rental Income</li>
          </a>
        </ul>
      </div>

      <div id="sidebar_icon" class="back">
        <img src="/images/sidebar-icon.png" alt="error" class="icon1">
      </div>

    </div>


    <div class="diff_features" style="flex-direction: column; align-items: center;">
      <!-- MY PROFILE HTML -->
      <h1>Rental Income</h1>
      <div class="table">
      <table id="rentalIncomeTable">
          <% if (totalRentalIncome > 0) { %>
          <thead>
              <tr>
                  <th><h3>Property</h3></th>
                  <th><h3>Address</h3></th>
                  <th><h3>Rent</h3></th>
                  <!-- <th><h3>Tenant</h3></th> -->
              </tr>
          </thead>
          <% } %>
          <tbody>
              <% rentalIncome.forEach(item => { %>
                <tr>
                    <td><%= item.subCategory %> <%= item.propertyType %></td>
                    <td><%= item.address %></td>
                    <td>₹<%= item.rent %></td>
                    <!-- <td><%= item.tenant %></td> -->
                </tr>
                <% }) %>
          </tbody>
      </table>
      <h2 class="income">Rental Income: ₹<%= totalRentalIncome %>/month</h2>
      </div>
    </div>

   

  </section>

  <script src="javascripts/owner_portal.js"></script>
</body>

</html>
 
